<div class="form-group ">
    <div class="form-group m-1">
        <label for="title">Title</label>
        <input required value="<%= article.title %>" type="text" name="title" id="title" class="form-control">
    </div>
    <div class="form-group m-1">
        <label for="imageUrl">Image Url</label>
        <input required value="<%= article.imageUrl %>" type="url" name="imageUrl" id="imageUrl" class="form-control">
    </div>

    <div class="form-group m-1">
        <label for="Description">Description</label>
        <textarea required type="text" name="description" id="description" class="form-control"><%= article.description %></textarea>
    </div>
    <div class="form-group m-1">
        <label for="markdown">Body</label>
        <textarea required   name="markdown"  id="markdown" class="form-control"><%= article.markdown %></textarea>
    </div>
    <div class="form-group m-1">
        <a href="/" class="btn btn-secondary my-2">Cancel</a>
        <button type="submit" class="btn btn-primary my-2">Save Blog</button>
    </div>
</div>